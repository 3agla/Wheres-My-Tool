<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WMT.infoPage" BackgroundColor="Silver">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="About WMT?"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                TextColor="Black"/>
            <Label Text="V.1.0"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                TextColor="Black"/>
            <Label Text="This app is desinged to store information about crimps"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                TextColor="Black"/>
            <Label Text="and the tools that are needed for those crimps.  When a "
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                TextColor="Black"/>
            <Label Text="crimp is typed in, it will then bring up the tools associated"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                TextColor="Black"/>
            <Label Text="with that crimp."
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>